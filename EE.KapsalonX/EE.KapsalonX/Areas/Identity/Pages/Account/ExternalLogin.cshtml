@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <h4>Associate your @Model.LoginProvider account.</h4>
    <hr />

    <p class="text-info">
        Je bent succesvol geauthenticeerd met <strong>@Model.LoginProvider</strong>.
        Vul je e-mailadres in om de registratie te voltooien.
    </p>

    <div class="row">
        <div class="col-md-4">
            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Registreer</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

