@model EE.KapsalonX.Web.ViewModels.AdminIndexVm

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<p>
    <a asp-action="Kalender">Toon kalender</a>
</p>
<p>
    <a asp-action="Create">Maak nieuwe afspraak</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Klanten.FirstOrDefault().Achternaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Klanten.FirstOrDefault().Voornaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Afspraken.FirstOrDefault().Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Afspraken.FirstOrDefault().Tijdstip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Behandenlingen.FirstOrDefault().GekozenBehandeling)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var afspraak in Model.Afspraken)
            {
                if (DateTime.Parse(afspraak.Datum).Month == DateTime.Today.Month)
                {
                    var tijdstipFormat = afspraak.Tijdstip;
                    DateTime.Parse(tijdstipFormat).ToShortTimeString();
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => afspraak.KlantGegevens.Achternaam)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => afspraak.KlantGegevens.Voornaam)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => afspraak.Datum)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => tijdstipFormat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => afspraak.BehandelingGegevens.GekozenBehandeling)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@afspraak.AfspraakId">Bewerk</a> |
                            <a asp-action="Details" asp-route-id="@afspraak.AfspraakId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@afspraak.AfspraakId">Verwijder</a>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>



    <div class="col-lg-12 col-sm-12 col-md-12">
        <div id="wrapper">
            <ejs-sidebar id="dockSidebar" width="220px" dockSize="80px" enableDock="true">
                <e-content-template>
                    <div class="dock">
                        <ul>
                            <li class="sidebar-item">
                                <span class="glyphicon-cloud"></span>
                                <span class="e-text" title="menu">Menu</span>
                            </li>
                            <li class="sidebar-item">
                                <span class="glyphicon-arrow-left"></span>
                                <span class="e-text" title="menu">Menu</span>
                            </li>
                            <li class="sidebar-item" >
                                <span class="glyphicon-cloud"></span>
                                <span class="e-text" title="menu">Menu</span>
                            </li>
                            <li class="sidebar-item" >
                                <span class="glyphicon-cloud"></span>
                                <span class="e-text" title="home">Home</span>
                            </li>
                            <li class="sidebar-item" >
                                <span class="glyphicon-cloud"></span>
                                <span class="e-text" title="profile">Profile</span>
                            </li>
                            <li class="sidebar-item" >
                                <span class="glyphicon-cloud"></span>
                                <span class="e-text" title="info">Info</span>
                            </li>
                            <li class="sidebar-item" id="toggle" >
                                <span class="glyphicon-cloud"></span>
                                <span class="e-text" title="settings">Settings</span>
                            </li>
                        </ul>
                    </div>
                </e-content-template>
            </ejs-sidebar>


        </div>
    </div>



<script>

    document.addEventListener('DOMContentLoaded', function () {
        dockBar = document.getElementById('dockSidebar').ej2_instances[0];
        document.getElementById('toggle').onclick = function () {
            dockBar.toggle();
        };
    });

</script>

<style>
    /* Content area styles */

    .title {
        text-align: center;
        font-size: 20px;
        padding: 15px;
    }

    .sub-title {
        text-align: center;
        font-size: 16px;
        padding: 10px;
    }

    #wrapper .sub-title .column {
        display: inline-block;
        padding: 10px;
    }

