@model EE.KapsalonX.Web.ViewModels.AdminIndexVm

@{
    ViewData["Title"] = "Kalender";
}
<div class="container">
    <h2>Kalender</h2>
    <hr />
    @section ControlsSection{
        <div class="control-section">
            <div class="control_wrapper schedule-control-section">
                <ejs-schedule id="schedule" height="550" selectedDate="DateTime.Now" firstDayOfWeek="1" readonly="true" showQuickInfo="false" dateFormat="d/M/yyyy" startHour="09:00" endHour="20:00">
                    <e-schedule-eventsettings dataSource="@ViewBag.Afspraken" enableTooltip="true">
                        <e-eventsettings-fields id="Id">
                            <e-field-subject id="Id" name="Behandeling"></e-field-subject>
                            <e-field-starttime name="StartTijd"></e-field-starttime>
                            <e-field-endtime name="EindTijd"></e-field-endtime>
                            <e-field-description name="Klant"></e-field-description>
                        </e-eventsettings-fields>
                    </e-schedule-eventsettings>
                </ejs-schedule>

            </div>
        </div>
    }
</div>

