@model EE.KapsalonX.Web.Models.BoekenIndexVm
@{
    ViewData["Title"] = "Index";
}
@*<script src="https://cdn.jsdelivr.net/npm/vue@2.5.17/dist/vue.js"></script>*@

<h2>Kies de gewenste behandeling</h2>


<div class="container">
    <div class="row">
        <form asp-controller="Boeken" asp-action="Index">
            <button value="Dames" name="Geslacht">Dames</button>
        </form>
        <form asp-controller="Boeken" asp-action="Index">
            <button value="Heren" name="Geslacht">Heren</button>
        </form>
        <form asp-controller="Boeken" asp-action="Index">
            <button value="Kinderen" name="Geslacht">Kinderen</button>
        </form>
    </div>
</div>


@if (Model.Geslacht == "Dames")
{
    foreach (var item in Model.BehandelingenDames)
    {
        <!-- Hier maak je een a element mee aan dat enkel en alleen een url zal vormen naar je controller maar geen keuze meegeeft.
            Dit wordt dan <a href="/Boeken/Kalender"> .... </a>
            Je wil echter wel iets gaan meegeven van waardes. Je kan dit op veel verschillende manieren gaan doen. Maar als je opteert voor een link (a element)
            limiteer je je een klein beetje tot het toevoegen van parameters.
            -->
        <li><a asp-action="Kalender">@item.Coupe.ToUpper(): @item.Optie (@item.Tijdsduur)</a></li>
        <!--
            Mogelijke optie hieronder
        -->
        <li><a asp-action="Kalender" asp-route-optie="@item.Optie">@item.Coupe.ToUpper(): @item.Optie (@item.Tijdsduur)</a></li>
        <!--
            Door in de razor syntax de asp-route-xyz te gebruiken. Waar xyz de naam is van de parameter die je zo meteen in je controller zal hanteren!
            zal je url in het a element wel een klein beetje meer informatie bevatten.
        -->
    }
}
else if (Model.Geslacht == "Heren")
{
    foreach (var item in Model.BehandelingenHeren)
    {
        <li><a>@item.Optie (@item.Tijdsduur)</a></li>
    }
}
else if (Model.Geslacht == "Kinderen")
{
    foreach (var item in Model.BehandelingenKinderen)
    {
        <li><a>@item.Optie (@item.Tijdsduur)</a></li>
    }
}




